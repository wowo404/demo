rule "contains"

    when
    	$s:School();
    	$su:Student($s.nickname contains name,$s.name contains name);
    then
        System.out.println("Congraturations,success to use: contains");

end

rule "not contains"

    when
    	$s:School();
    	$su:Student(name not contains $s.name);
    then
        System.out.println("Congraturations,success to use: not contains");

end

rule "memberOf"

    when
    	$su:Student(name memberOf list);
    then
        System.out.println("Congraturations,success to use: memberOf");

end

